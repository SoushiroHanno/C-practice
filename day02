#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main (void)
{
  double n=0,x=0,y=0,count=0,p=0;
  srand((unsigned)time(NULL));

  while(n<10000)
    {
      x = (double)1.0*rand()/RAND_MAX;
      y = (double)1.0*rand()/RAND_MAX;

      if(((x*x)+(y*y)) <= 1)
	{
	  count++;
	  n++;
	}
      else 
	{
	  n++;
	}
    }
  p = 4*count/n;
  
  printf("pi = %f\n", p);

  return 0;
}

